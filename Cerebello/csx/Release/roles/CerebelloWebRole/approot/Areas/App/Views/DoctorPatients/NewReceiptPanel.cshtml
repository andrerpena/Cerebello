@{
    Layout = null;
}
@using (Html.BeginForm("newreceiptpanel", null, FormMethod.Post, new { id = "new_receipt_form" }))
{
    <input type="submit" value="salvar receita" />
}
<script type="text/javascript">
    $(function () {
        $('#new_receipt_form').submit(function () {
            if ($(this).valid()) {
                $.ajax({
                    url: this.action,
                    type: this.method,
                    data: $(this).serialize(),
                    success: function (result) {
                        alert("funciona mesmo");
                        //$('#result').html(result);
                    }
                });
            }
            return false;
        });
    });
</script>