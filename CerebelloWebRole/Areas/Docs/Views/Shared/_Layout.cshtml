
@{
    this.Layout = "~/Views/Shared/_Layout.cshtml";

}

@section Header {
    <link href="@Url.Content("~/Content/Styles/Docs/Docs.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Styles/Docs/Media.css")" rel="stylesheet" type="text/css" />
    
    <link href="@Url.Content("~/Content/Styles/Docs/Lightbox/lightbox.css")" rel="stylesheet" type="text/css" />
    @*<link href="@Url.Content("~/Content/Styles/Docs/Lightbox/screen.css")" rel="stylesheet" type="text/css" />*@
    
    <script type="text/javascript" src="/Scripts/Docs/jquery.smooth-scroll.min.js"></script>
    <script type="text/javascript" src="/Scripts/Docs/lightbox.js"></script>
}

@section BodyStart
