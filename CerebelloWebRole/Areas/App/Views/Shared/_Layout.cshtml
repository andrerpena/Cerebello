<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link href="@Url.Content("~/Content/Styles/App/App.css")" rel="Stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Styles/App/Media.css")" rel="Stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Styles/App/jquery.jmNotify.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Styles/App/jquery.arp.lookup.css")" rel="stylesheet" type="text/css" />

    <!-- controls -->
    <link href="@Url.Content("~/Content/Styles/App/Controls/cardview.css")" rel="Stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Styles/App/Controls/media.css")" rel="Stylesheet" type="text/css" />

    @RenderSection("Styles", false)

    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/date.format.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.maskedinput-1.3.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/MicrosoftAjax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/scripts-app.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jmNotify.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/scripts.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/jquery.arp.ajax.link.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.arp.ajax.form.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.arp.caret.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.arp.watermark.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.arp.pager.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.arp.lookup.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.arp.modal.js")" type="text/javascript"></script>

    @RenderSection("Scripts", false) 
</head>
<body>
    <div class="top-bar">
    
    </div>
    <div id="app-header">
        <div class="top-menu">
        </div>
        <div class="title">
            @if (IsSectionDefined("AppTitle"))
            {
                @RenderSection("AppTitle") 
            }
            else
            {
                @:CareCraft
            }
        </div>
    </div>
    <div class="main">
        <div class="menu-column">
            @RenderSection("MainMenu")    
        </div>
        <div class="main-column">
            <div class="document">
                <div class="document-header">
                    <h2>@RenderSection("Title")</h2>
                    @RenderSection("AdditionalTitleInfo")
                </div>
                <div class="document-body">
                    <div class="document-side-column">
                        @RenderSection("SideBar")        
                    </div>
                    <div class="document-main-column">
                        @RenderBody()
                    </div>
                    <div style="clear:both"></div>
                </div>
            </div>
            <div class="footer">
            
            <ul>
                <li class="first"><a href="#">Comunidade</a></li>
                <li><a href="#">UserVoice</a></li>
                <li><a href="#">Blog</a></li>
            </ul>
            </div>
        </div>
    </div>
</body>
</html>
