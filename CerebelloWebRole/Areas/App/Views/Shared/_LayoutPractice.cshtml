@{
    Layout = "~/Areas/App/Views/Shared/_Layout.cshtml";
    var controllerName = ViewContext.RouteData.Values["controller"].ToString().ToLower();
    var actionName = ViewContext.RouteData.Values["action"].ToString().ToLower();
    var practiceId = ViewBag.Practice.Id;
    var user = (Cerebello.Model.User)ViewBag.DBUser;
}
@section MainMenu {
    <ul class="tabNav">
        @if (actionName == "welcome")
        {
            <li class="youarehere">
                <a href="@Url.Action("welcome", "practicehome")" class="no-icon">Bem vindo!</a>
            </li>
        }
        <li class="@(controllerName.Equals("practicehome") && actionName == "index" ? "youarehere" : "")">
            <a href="@Url.Action("Index", "practicehome")" class="home-icon">Início</a> 
        </li>
        <li class="@(controllerName.Equals("doctors") ? "youarehere" : "")">
            <a href="@Url.Action("Index", "doctors")" class="doctors-icon">Médicos</a>
        </li>
        <li class="@(controllerName.Equals("users") ? "youarehere" : "")">
            <a href="@Url.Action("Index", "users")" class="doctors-icon">Usuários</a>
        </li>
        @if (user.AdministratorId != null)
        {
            <li class="header">Configurações</li>
            <li class="@(controllerName.Equals("configpractice") ? "youarehere" : "")">
                <a href="@Url.Action("Index", "configpractice")" class="doctors-icon">Config. do consultório</a>
            </li>
            if (user.IsOwner)
            {
                <li class="@(controllerName.Equals("configaccount") ? "youarehere" : "")">
                    <a href="@Url.Action("Index", "configaccount")" class="doctors-icon">Config. da conta</a>
                </li>
            }
        }
    </ul>
    <hr />
}

@section TopActions {

}

@section AdditionalTitleInfo {
    @if (IsSectionDefined("AdditionalTitleInfo"))
    {
        <span class="subtitle">
        @RenderSection("AdditionalTitleInfo")
        </span>
    }
}

@section Scripts {
    @RenderSection("Scripts", false)
}

@section Title {
    @RenderSection("Title")
}

@section Styles {
    @RenderSection("Styles", false)
}

@section SideBar {
    @RenderSection("SideBar", false)
}

@RenderBody()