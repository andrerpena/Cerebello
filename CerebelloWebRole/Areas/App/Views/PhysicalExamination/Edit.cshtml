@using System.Diagnostics
@using CerebelloWebRole.Code.Controls
@model PhysicalExaminationViewModel
@{
    this.Layout = null;
    string physicalExaminationId = null;
    if (this.Model != null && Model.Id == null)
    {
        physicalExaminationId = "new-" + Guid.NewGuid().ToString();
    }
    else
    {
        Debug.Assert(Model != null, "Model != null");
        physicalExaminationId = Model.Id.ToString();
    }
}
<div class="physicalExamination-edit appointment-panel" data-val-id="physicalExamination-@physicalExaminationId">
    @using (Html.BeginForm(null, null, FormMethod.Post))
    {
        @Html.ValidationSummary(false)
        @Html.HiddenFor(model => model.PatientId)
        @Html.HiddenFor(model => model.Id)

        var editPanel = this.Html.CreateEditPanel();
        editPanel.AddField(model => model.Notes,
                EditPanelFieldSize.Large, @<text>@Html.TextAreaFor(model => model.Notes, new { rows = 5 })</text>);
        editPanel.AddField(model => model.MedicalRecordDate, EditPanelFieldSize.Large, @<text>@Html.EditorFor(model => model.MedicalRecordDate)</text>);
        @editPanel.GetHtml()

        <div class="submit-bar">
            <input type="submit" value="salvar exame físico" />
            <span class="separator">ou</span>
            <a href="#" class="cancel">cancelar</a>
        </div>
    }

    <script type="text/javascript">
        (function () {
            var $container = $("div[data-val-id='physicalExamination-@physicalExaminationId']");
            $('form', $container).ajaxForm({
                success: function (result) {
                    $container.replaceWith(result);
                }
            });
            $('a.cancel', $container).click(function (e) {
                e.preventDefault();
                    @if (Model.Id != null)
                    {
                        @:$.ajax({ url: "@(Url.Action("Details", new { id = Model.Id }))", success: function (result) { $container.replaceWith(result); } });   
                    }
                    else
                    {
                        @:$container.remove();
                                        }
                });
        })();
    </script>
</div>
