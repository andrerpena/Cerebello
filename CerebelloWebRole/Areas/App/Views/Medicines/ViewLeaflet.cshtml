@model CerebelloWebRole.Areas.App.Models.MedicineLeafletViewModel
@{
    ViewBag.Title = "Bula do medicamento: " + this.Model.MedicineName + " · Cerebello";
}
@section Title {
    Bula do medicamento: @Model.MedicineName (@Model.Description)
}

@section SideBar {
    <a href="@Model.GoogleDocsUrl" class="icon-link icon-link-import">Visualizar no Google Docs</a>
    <a href="@Model.Url" class="icon-link icon-link-import">Download</a>
    <a href="@Url.Action("index")" class="icon-link icon-link-home">Resumo de medicamentos</a>
}

<p style="margin-bottom: 15px">
    Bula do medicamento <a href="@Url.Action("Details", new { id = Model.MedicineId })">@Model.MedicineName</a>
</p>

<iframe style="width: 100%; height: 800px" src="@this.Model.GoogleDocsEmbeddedUrl"></iframe>
