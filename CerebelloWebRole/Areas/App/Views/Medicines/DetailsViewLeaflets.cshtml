@model CerebelloWebRole.Areas.App.Models.MedicineViewModel
@{
    Layout = null;
}

@foreach (var leaflet in this.Model.Leaflets)
{
    <p style="padding: 0 0 8px;">@leaflet.Description (<a href="http://docs.google.com/viewer?url=@leaflet.Url" target="_blank">Google Docs</a>, <a href="@leaflet.Url" target="_blank">Download</a>)</p>
    <iframe style="width: 100%; height: 500px" src="http://docs.google.com/viewer?embedded=true&url=@leaflet.Url">
    </iframe>
}