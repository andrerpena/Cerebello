@model ExaminationResultViewModel
@using System.Diagnostics
@using System.Linq.Expressions
@using CerebelloWebRole.Code.Controls
@{
    Layout = null;
    Debug.Assert(this.Model != null, "this.Model != null");
    var examResultId = this.Model.Id == null ? "new-" + Guid.NewGuid() : this.Model.Id.ToString();
}
<div class="examresult-edit appointment-panel" data-val-id="examresult-@examResultId">
    @using (Html.BeginForm(null, null, FormMethod.Post))
    {
        using (Html.BeginScope("ExamResult"))
        {
        @Html.ValidationSummary(false)
        @Html.HiddenFor(model => model.PatientId)
        @Html.HiddenFor(model => model.Id)

            var editPanel = Html.CreateEditPanel();

            editPanel.AddField(
                m => m.MedicalProcedureId,
                EditPanelFieldSize.Large,
                format: @<text>
        @(Html.AutocompleteGridFor<ExaminationResultViewModel, MedicalProceduresLookupGridModel, int?>(
                                    m => m.MedicalProcedureId,
                                    m => m.MedicalProcedureName,
                                    Url.Action("LookupMedicalProcedures", "MedicalProcedures"),
                                    pm => pm.Id,
                                    pm => pm.Name,
                                    new Expression<Func<MedicalProceduresLookupGridModel, object>>[] { pm => pm.Code }
                            ))
        @Html.HiddenFor(m => m.MedicalProcedureCode)
        </text>);

            editPanel.AddField(
                m => m.Text,
                EditPanelFieldSize.Large,
                format: @<text>@Html.TextAreaFor(model => model.Text, new { rows = 5 })</text>);

            editPanel.AddField(model => model.ExaminationDate, EditPanelFieldSize.Large, @<text>@Html.EditorFor(model => model.ExaminationDate)</text>);
            editPanel.AddField(model => model.ReceiveDate, EditPanelFieldSize.Large, @<text>@Html.EditorFor(model => model.ReceiveDate)</text>);

        @editPanel.GetHtml()

        <div class="inline-link-bar">
        </div>

        <div class="submit-bar">
            <input type="submit" value="salvar resultado de exame" />
            <span class="separator">ou</span>
            <a href="#" class="cancel">cancelar</a>
        </div>
        }

        <script type="text/javascript">
            (function () {
                var $container = $("div[data-val-id='examresult-@examResultId']");
                $('form', $container).ajaxForm({
                    success: function (result) {
                        $container.replaceWith(result);
                    }
                });
                $('a.cancel', $container).click(function (e) {
                    e.preventDefault();
                    @if (Model.Id != null)
                    {
                        @:$.ajax({ url: "@(Url.Action("Details", new { id = Model.Id }))", success: function (result) { $container.replaceWith(result); } });   
                    }
                    else
                    {
                        @:$container.remove();
                                        }
                });
            })();
        </script>
    }
</div>
