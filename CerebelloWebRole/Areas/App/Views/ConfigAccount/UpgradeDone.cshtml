@model CerebelloWebRole.Models.ChangeContractViewModel
@{
    var planTitles = new Dictionary<string, string>
        {
            { "ProfessionalPlan", "plano profissional" }
        };

    var title = string.Format("Upgrade concluído");
    this.ViewBag.Title = string.Format("{0} · Cerebello", title);
    Layout = "~/Areas/App/Views/Shared/_LayoutPractice.cshtml";
}
@section Title {
    @title @LockIcon.Icon()
}
@section Scripts {
    @LockIcon.Script(LockAccessType.Owner)
}
<div class="upgrade-block">
    <h2 style="margin-bottom: 1em;">Upgrade concluído com êxito</h2>
    <p class="text-description">
        O upgrade da sua conta para o plano profissional foi concluído com êxito.
    </p>
    <p class="text-description">
        Será enviada cobraça por e-mail com remetente
        <strong style="white-space: nowrap">CareSys Tecnologias de Informação Limitada via PayPal</strong>
        e com o seguinte título:
        <p style="margin-left: 2em;">
            <strong style="white-space: nowrap">Você recebeu uma fatura (CEREB.##.####.#) de CareSys Tecnologias de Informação Limitada</strong>
        </p>
        Esta fatura pode ser paga com cartão de crédito, ou usando o saldo disponível em uma conta do PayPal.
    </p>
</div>

<div class="submit-bar">
    @Html.ActionLink("voltar", "Index")
</div>
