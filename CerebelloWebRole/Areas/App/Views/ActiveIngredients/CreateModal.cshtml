@model CerebelloWebRole.Areas.App.Models.MedicineActiveIngredientViewModel
@{
    this.Layout = null;

    var cardView = Html.CreateEditPanel();
    cardView.AddField(m => m.Name);
}

<div class="edit-active-ingredient">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "new_active_ingredient_form" }))
    {
        @Html.ValidationSummary(false)

        @cardView.GetHtml()

        <div class="submit-bar">
            <input type="submit" value="salvar princípio ativo" />
            <span class="separator">ou</span> <a href="#" onclick="$(this).trigger('modal-cancel')">cancelar</a>
        </div>

    }

    <script type="text/javascript">
        $("#new_active_ingredient_form").modalForm();
    </script>
</div>
