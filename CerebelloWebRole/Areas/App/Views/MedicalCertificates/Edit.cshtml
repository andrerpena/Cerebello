@using CerebelloWebRole.Code.Controls
@model CerebelloWebRole.Areas.App.Models.MedicalCertificateViewModel
@{
    Layout = null;
    string certificateId = null;
    if (this.Model != null && Model.Id == null)
    {
        certificateId = "new-" + Guid.NewGuid().ToString();
    }
    else
    {
        certificateId = Model.Id.ToString();
    }

    string autocompleteName = null;
    string htmlFieldPrefix = null;
}
<div class="certificate-edit appointment-panel" data-val-id="certificate-@certificateId">
    @using (Html.BeginForm(null, null, FormMethod.Post))
    {
        using (Html.BeginScope("MedicalCertificates"))
        {
            var editPanel = this.Html.CreateEditPanel();
            editPanel.AddField(model => model.ModelId,
                EditPanelFieldSize.Large,
                @<text>@this.Html.AutocompleteFor(model => model.ModelId, model => model.ModelName, @Url.Action("AutocompleteModelMedicalCertificates", "ModelMedicalCertificates"))</text>);

            var a = this.Html.GetComponentNameFor(model => model.ModelName);
            
            @Html.ValidationSummary(false)
            @Html.HiddenFor(model => model.PatientId)
            @Html.HiddenFor(model => model.Id)

            @editPanel.GetHtml()

            autocompleteName = this.Html.GetComponentNameFor(model => model.ModelName);
            htmlFieldPrefix = this.ViewData.TemplateInfo.HtmlFieldPrefix;
            
            <div class="fields-wrapper">
                @Html.Partial("MedicalCertificateFieldsEditor")        
            </div>
            <div class="inline-link-bar">
                <a href="@Url.Action("index", "modelmedicalcertificates")" target="_blank" class="inline-link" >Gerenciar modelos de atestados</a>
            </div>
            <div class="submit-bar">
                <input type="submit" value="salvar atestado" />
                <span class="separator">ou</span> <a href="#" class="cancel">cancelar</a>
            </div>
        }
    }
    <script type="text/javascript">
        (function() {
            var $container = $("div[data-val-id='certificate-@certificateId']");
            
            $('form', $container).ajaxForm({
                success: function (result) {
                    $container.replaceWith(result);
                }
            });

            $("input[name='@autocompleteName']").data("autocomplete").opts.change = function(data) {
                console.log(data);
                console.log(data.Id);
                $.ajax({
                    url: "@Url.Action("MedicalCertificateFieldsEditor")",
                    data: { modelId: data.Id, certificateId: @(Model.Id != null ? Model.Id.ToString() : "null"), htmlFieldPrefix: '@htmlFieldPrefix' },
                        success: function(result) {
                            $(".fields-wrapper", $container).html(result);
                        },
                        error: function(e) {
                            alert("algo deu errado");
                        }
                    });
            };
            
            $('a.cancel', $container).click(function(e) {
                e.preventDefault();
                @if (Model.Id != null)
                {
                    @:$.ajax({url: "@Url.Action("details", new { id = Model.Id })", success: function(result) { $container.replaceWith(result); }});   
                }
                else
                {
                    @:$container.remove();
                }
            });
        })();
    </script>
</div>
