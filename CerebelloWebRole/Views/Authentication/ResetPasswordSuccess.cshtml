@model IdentityViewModel
@{
    this.Layout = "../Shared/_AuthenticationLayout.cshtml";
    ViewBag.Title = "Senha redefinida com sucesso";
}
<div class="authentication-container">
    <div class="authentication-container-wrapper">
        <div class="header">
            <h2>@ViewBag.Title</h2>
        </div>
        <div class="controls-wrapper">
            <p>A sua senha foi redefinida com sucesso.</p>
            <p>Você já pode usar a sua nova senha para fazer <a href="@Url.Action("Login", this.Model)">login</a>.</p>
        </div>
    </div>
</div>
