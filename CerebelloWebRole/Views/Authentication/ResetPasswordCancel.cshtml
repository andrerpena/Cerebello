@model CerebelloWebRole.Models.ResetPasswordRequestViewModel
@{
    ViewBag.Title = "Requisição cancelada";
}
<div class="authentication-container">
    <div class="authentication-container-wrapper">
        <div class="header">
            <h2>@ViewBag.Title</h2>
        </div>
        <p>
            Desculpe-nos pela inconveniência!
