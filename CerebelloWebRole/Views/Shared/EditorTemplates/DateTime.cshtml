@model DateTime?
@{
    var formattedValue = this.Model.HasValue ? this.Model.Value.ToString(System.Threading.Thread.CurrentThread.CurrentCulture.DateTimeFormat.ShortDatePattern) : null;
}
@Html.TextBox(String.Empty, formattedValue, new { autocomplete = "off" })
<script type="text/javascript">
    (function () {
        var $input = $("input[name='@ViewData.TemplateInfo.HtmlFieldPrefix']");
        $input.mask("99/99/9999");
        $input.datepicker();
    })();
</script>
