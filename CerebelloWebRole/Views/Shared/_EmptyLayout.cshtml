<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />

    @if (DebugConfig.IsDebug)
    {
        <debug />
    }

    <title>@this.ViewBag.Title</title>

    <link href="@this.Url.Content("/Bootstrap/css/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@this.Url.Content("/Bootstrap/css/bootstrap-responsive.css")" rel="stylesheet" type="text/css" />
    <link href="@this.Url.Content("~/Content/Styles/Site/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@this.Url.Content("~/Content/Styles/Site/Media.css")" rel="stylesheet" type="text/css" />

    @this.RenderSection("Styles", false)

    <script src="@this.Url.Content("~/Scripts/jquery-1.8.1.min.js")" type="text/javascript"></script>
    <script src="@this.Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@this.Url.Content("~/Bootstrap/js/bootstrap.js")" type="text/javascript"></script>
    <script src="@this.Url.Content("~/Scripts/jquery.maskedinput-1.3.min.js")" type="text/javascript"></script>

    @this.RenderSection("Scripts", false)
</head>
<body>
    @this.RenderBody()
</body>
</html>
