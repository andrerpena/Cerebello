@using CerebelloWebRole.Code.Security
<!DOCTYPE html>
<html>
    <head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <script src="@Url.Content("~/Scripts/jquery-1.8.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Bootstrap/js/bootstrap.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.maskedinput-1.3.min.js")" type="text/javascript"></script>

    <link href="@Url.Content("~/Content/Styles/Reset.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("/Bootstrap/css/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("/Bootstrap/css/bootstrap-responsive.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Styles/Site/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Styles/Site/Media.css")" rel="stylesheet" type="text/css" />
    @RenderSection("Header", false)

    @RenderSection("Scripts", false)
</head>
<body>
    <div class="topbar">
        <div class="header">
            <div class="container">
                <div class="brand">
                    <a href="/">
                        <img src="/Content/Images/top-logo.png" />
                    </a>
                </div>
                <ul id="top_menu" class="nav nav-pills">
                    <li class="@(this.IsAction("Index", "Home") ? "active" : "")"><a href="/">Home</a></li>
                    <li class="@(this.IsAction("PricesAndPlans", "Home") ? "active" : "")"><a href="#">Preços e Planos</a></li>
                    <li class="@(this.IsAction("Index", "HomeDocs") ? "active" : "")"><a href="@Url.Action("Index", "HomeDocs", new { area = "Docs" })">Documentação</a></li>
                    @if (this.User is AuthenticatedPrincipal)
                    {
                        var userData = (this.User as AuthenticatedPrincipal).Profile;
                        <li><a href="@Url.Action("Index", "PracticeHome", new { practice = userData.PracticeIdentifier, area = "App" })">Entrar</a></li>
                        <li><a href="@Url.Action("LogoutLogin", "Authentication")">Eu não sou @userData.FullName</a></li>
                    }
                    else
                    {
                        <li class="@(this.IsAction("Login", "Authentication") ? "active" : "")"><a href="@Url.Action("Login", "Authentication", new { area = "" })">Login</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
    @RenderBody()
</body>
</html>
