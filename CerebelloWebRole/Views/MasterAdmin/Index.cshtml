            <h2>E-mails</h2>
        </div>
        <div class="span3">
        </div>
    </div>
    <hr />
    <div class="container features">
        <div class="row">
            <div class="span6">
                <div class="row">
                    <div class="span1">
                    </div>
                    <div class="span5">
                        <h3>E-mails para pacientes</h3>
                        <p>
                            <a resultType="json" href="@Url.Action("SendReminderEmails")">Enviar e-mails para lembrar das consultas</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="span9">
            <h2>Outras operações</h2>
        </div>
        <div class="span3">
        </div>
    </div>
    <hr />
