@{
    ViewBag.Title = "Cerebello master admin";
}
@section Scripts {
    <script type="text/javascript">
        $(function () {
            $("a[resultType='json']").click(function (event) {
                event.preventDefault();
                $.getJSON($(this).attr("href"), function (data) {
                    alert(data.message);
                });
            });
        });
    </script>
}
<div class="hero ac">
    <div class="container">
        <h1>Central administrativa</h1>
    </div>
</div>
